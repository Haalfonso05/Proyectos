---
interface Props {
	title: string;
}

const  title = "VerSell";
import { Icon } from 'astro-icon/components';
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/public/img/logo.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header class="bg-[#679e02] top-0 sticky z-20 w-full h-[auto] flex flex-row justify-between">
			<a href="/" class="ml-[10%] ">
				<img src="/public/img/logo.png" alt="" class="size-20 my-[20%] ">				
			</a>

			<div class="inline-flex w-[50%]">
				<ul class="inline-flex text-white space-x-10 my-[5%] font-semibold">
					<li><a href="/">INICIO</a></li>
					<li><a href="#recomendaciones">RECOMENDACIONES</a></li>
					<li><a href="#contacto">CONTACTO</a></li>
					<li><a href="#reseñas">RESEÑAS</a></li>
					<li><a href="#acercaDe">ACERCA DE</a></li>
					<li><a href="/venta">VENDER</a></li>
					<li><a href="/page/compra">COMPRAR</a></li>
				</ul>
			</div>
			<div class="inline-flex ml-[%] mr-[10%]">
				<ul class="inline-flex text-white my-[2%] font-semibold space-x-10 w-[100%]">
					<li class="my-[5%]  ">
						<a href="/sesion" class="boton botonA  inline-flex text-center">INICIAR SESIÓN</a>
					</li>
					<li class="my-[10%]">
						<a href="/registro" class="boton botonA my-[10%]">REGISTRATE</a>
					</li>
				</ul>	
			</div>
		</header>

		
		
		<slot/>
			  
			  <!-- <footer> -->
			   <div class="w-[100%] h-[300px] bg-[#4f5733] pt-[5%] text-white ">
				<div class="inline-flex w-[100%]">
				  <div class="flex-col ml-[13%]">
					<ul class="text-[#C2D5CF] text-xs">
					  <li class="text-white text-xl mb-[2%] font-bold">Sobre VerSell</li>
					  <li class=" hover:text-[#f2ede4] hover:cursor-pointer">Sobre nosotros</li>
					  <li class="mt-[1%] hover:text-[#f2ede4] hover:cursor-pointer">Contáctanos</li>
					  <li class="mt-[1%] hover:text-[#f2ede4] hover:cursor-pointer">Vacantes</li>
					</ul>
				  </div> 
			
				  <div class="flex-col mx-[2%]">
					<ul class="text-[#C2D5CF] text-xs">
					  <li class="text-white text-xl mb-[2%] font-bold">Ayuda</li>
					  <li class=" hover:text-[#f2ede4] hover:cursor-pointer">Preguntas frecuentes</li>
					  <li class="mt-[1%] hover:text-[#f2ede4] hover:cursor-pointer" >Crear un ticket</li>
					</ul>
				  </div>
			
				  <div class="flex-col mx-[2%]">
					<ul class="text-[#C2D5CF] text-xs">
					  <li class="text-white text-xl mb-[2%] font-bold">Comunidad</li>
					  <li class=" hover:text-[#f2ede4] hover:cursor-pointer">Blog</li>
					  <li class="mt-[1%] hover:text-[#f2ede4] hover:cursor-pointer">Sorteos</li>
					  <li class="mt-[1%] hover:text-[#f2ede4] hover:cursor-pointer">Conviértete en afiliado</li>
					</ul>
				  </div>
			

			
				  <div class="flex-col ml-[40%] list-none">
					<li class="text-white text-xl font-bold mb-[10%]">Siguenos</li>
					<ul class="inline-flex my-[2%] space-x-5">
					  <li><a href="https://www.facebook.com/login/?next=https%3A%2F%2Fwww.facebook.com%2F%3Flocale%3Des_LA"><Icon name="mdi:facebook" class="size-10 hover:text-[#f2ede4]"/></a></li>
					  <li><a href="https://x.com/?lang=es"><Icon name="mdi:twitter" class="size-10 hover:text-[#f2ede4]"/></a></li>
					  <li><a href="https://www.instagram.com/"><Icon name="mdi:instagram" class="size-10 hover:text-[#f2ede4]"/></a></li>
					</ul>
				  </div>
			
			</div>
		
	</body>
</html>
<style>
	@font-face {
		font-family: 'titulos';
		src: url('/fonts/CastoroTitling-Regular.ttf');
		font-weight: normal;
  		font-style: normal;
  		font-display: swap;
	}
	.botonA{
		@apply hover:bg-white hover:text-[#4f5733] hover:cursor-pointer;
	}
	.boton{
		@apply bg-[#4f5733] px-[20%] py-[5%] rounded-full border-2 border-[#4f5733];
	}
</style>

	