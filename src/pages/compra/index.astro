---
import Layout from "../../layouts/Layout2.astro";
---

<Layout title="Comprar">
        <div class="w-[100%] h-[3000px] bg-[#595048]">
                <p class="text-white text-4xl text-center font-extrabold pt-[2%] mb-[5%]">COMPRAR</p>
                <div class="inline-flex float-end z-10 mr-10 w-[30%] h-[20%] pb-[20%] bg-[#f2ede4] sticky top-[15%] rounded-3xl">
                    <div class="w-[100%] ">
                        <p class="text-3xl font-bold text-center">PRODUCTOS</p>
                        <ul class="mx-[2%] text-2xl flex-col text-center">
                        <li>Tomates</li>
                        <li>Cebollin</li>
                        <li>Mazorca</li>
                        <li>Pimenton</li>
                        <li>Pepino</li>
                        <li>Lechuga</li>
                        <li>Papa</li>
                        <li>Cilantro</li>
                    </ul>
                    </div>
                    
                </div>
                <div class=" bg-[#f2ede4] w-[40%] h-[10%] my-3 rounded-3xl  ml-[10%] inline-flex"> 	
                    <div class="bg-[url('public/img/tomate.png')] w-[30%] h-[69%] mx-[3%] my-[5%] rounded-full bg-cover">
                    </div>
                    <ul class="flex-col mx-[3%] my-[10%] font-bold">
                        <li class="my-[1%] text-2xl">Nombre: Tomate</li>
                        <li class="my-[1%] text-2xl">Lugar de procedencia: Abrego</li>
                        <li class="my-[1%] text-2xl">Calificacion: 6/10</li>
                        <li class="my-[1%] mb-[10%] text-3xl">Precio: 500$ unidad </li>
                        <a href="/menu" class="boton botonA ">COMPRAR</a>
                    </ul>
                </div>
                <div class="bg-[#f2ede4] w-[40%] my-3 h-[10%] rounded-3xl  ml-[10%] inline-flex">		
